IF
	See([PC])
	AttackedBy([GOODCUTOFF],DEFAULT)
	Allegiance(Myself,NEUTRAL)
THEN
	RESPONSE #100
		SmallWait(5)
		Enemy()
		ActionOverride("X3EHK2",Enemy())
		ActionOverride("X3EHK1",Enemy())
END

 IF
    AttackedBy([GOODCUTOFF],DEFAULT)
	InParty("X3Isaac")
  THEN
    RESPONSE #100
	  ActionOverride("X3Isaac",ChangeAIScript("",DEFAULT))
	  ActionOverride("X3Isaac",ChangeAIScript("",GENERAL))
	  ActionOverride("X3Isaac",LeaveParty())
	  ActionOverride("X3Isaac",Enemy())
 END 

IF
	See([PC])
	!Allegiance(Myself,ENEMY)
	NumberOfTimesTalkedTo(0)
THEN
	RESPONSE #100
		StartDialogue("X3EHK3",[PC])
		SetGlobal("X3EHK3Talk","GLOBAL",1)
END

IF 
Global("X3AttackEmily","GLOBAL",1)
!Dead("X3mily")
THEN 
	RESPONSE #100 
	Attack("X3mily")
END 	
IF 
Global("X3AttackEmily","GLOBAL",1)
Dead("X3mily")
THEN 
	RESPONSE #100 
	EscapeArea()
END 	



